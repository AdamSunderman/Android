<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sql_listview_item"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/sql_listview_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sql_listview_lat"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|start"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/sql_listview_text" />

    <TextView
        android:id="@+id/sql_listview_lon"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|start"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/sql_listview_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="86dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|end"
        android:textAlignment="viewEnd"
        android:text="Longitude: "
        app:layout_constraintLeft_toRightOf="@+id/sql_listview_lat"
        app:layout_constraintTop_toBottomOf="@+id/sql_listview_text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="86dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|end"
        android:textAlignment="viewEnd"
        android:text="Latitude: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sql_listview_text" />
</android.support.constraint.ConstraintLayout>